@model _ass2mvc.Models.Art

@{
    ViewBag.Title = "Edit";
}

<div class="page-header">
    <h1>Edit <small>the art information</small></h1>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Author information</h3>
            </div>
            <div class="panel-body">

                <div class="form-horizontal" role="form">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <div class="form-group">
                            @Html.HiddenFor(model => model.ArtID)
                            @Html.LabelFor(m => m.ArtName, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.ArtName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ArtName)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ArtYears, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.ArtYears, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ArtYears)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Notes, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.Notes, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Notes)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Photo, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.Photo, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Photo)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.AuthorID, "Author", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.DropDownList("AuthorID", String.Empty)
                                @Html.ValidationMessageFor(model => model.AuthorID)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

    <div class="col-md-4">
        <img src="~/Images/home/sip.jpg" class="img-rounded" height="330" width="350" />
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
